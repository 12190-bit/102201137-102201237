<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PrijectContentMapper">

    <resultMap type="PrijectContent" id="PrijectContentResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="img"    column="img"    />
        <result property="createBy"    column="create_by"    />
        <result property="createDate"    column="create_date"    />
        <result property="createDept"    column="create_dept"    />
        <result property="createAvatar"    column="create_avatar"    />
        <result property="extend1"    column="extend1"    />
        <result property="extend2"    column="extend2"    />
        <result property="extend3"    column="extend3"    />
    </resultMap>

    <sql id="selectPrijectContentVo">
        select id, title, content, img, create_by, create_date, create_dept, create_avatar, extend1, extend2, extend3 from priject_content
    </sql>

    <select id="selectPrijectContentList" parameterType="PrijectContent" resultMap="PrijectContentResult">
        <include refid="selectPrijectContentVo"/>
        <where>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="img != null  and img != ''"> and img = #{img}</if>
        </where>
        order by create_date desc
    </select>

    <select id="selectPrijectContentById" parameterType="Long" resultMap="PrijectContentResult">
        <include refid="selectPrijectContentVo"/>
        where id = #{id}
    </select>

    <insert id="insertPrijectContent" parameterType="PrijectContent" useGeneratedKeys="true" keyProperty="id">
        insert into priject_content
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="img != null">img,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createDate != null">create_date,</if>
            <if test="createDept != null">create_dept,</if>
            <if test="createAvatar != null">create_avatar,</if>
            <if test="extend1 != null">extend1,</if>
            <if test="extend2 != null">extend2,</if>
            <if test="extend3 != null">extend3,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="img != null">#{img},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createDate != null">#{createDate},</if>
            <if test="createDept != null">#{createDept},</if>
            <if test="createAvatar != null">#{createAvatar},</if>
            <if test="extend1 != null">#{extend1},</if>
            <if test="extend2 != null">#{extend2},</if>
            <if test="extend3 != null">#{extend3},</if>
         </trim>
    </insert>

    <update id="updatePrijectContent" parameterType="PrijectContent">
        update priject_content
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="img != null">img = #{img},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createDate != null">create_date = #{createDate},</if>
            <if test="createDept != null">create_dept = #{createDept},</if>
            <if test="createAvatar != null">create_avatar = #{createAvatar},</if>
            <if test="extend1 != null">extend1 = #{extend1},</if>
            <if test="extend2 != null">extend2 = #{extend2},</if>
            <if test="extend3 != null">extend3 = #{extend3},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePrijectContentById" parameterType="Long">
        delete from priject_content where id = #{id}
    </delete>

    <delete id="deletePrijectContentByIds" parameterType="String">
        delete from priject_content where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
